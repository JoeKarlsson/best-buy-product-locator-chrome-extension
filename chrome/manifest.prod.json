{
  "version": "0.0.0",
  "name": "best-buy-product-locator",
  "manifest_version": 2,
  "description": "Example for react-chrome-extension-boilerplate",
  "browser_action": {
    "default_title": "Best Buy Product Locator",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "img/bby-icon-16.png",
    "48": "img/bby-icon-48.png",
    "128": "img/bby-icon-128.png"
  },
  "web_accessible_resources": ["inject.html"],
  "background": {
    "page": "background.html"
  },
  "permissions": [
    "webview",
    "webRequest",
    "contextMenus",
    "tabs",
    "storage",
    "geolocation",
    "https://api.bestbuy.com/*",
    "https://img.bbystatic.com/*",
    "https://github.com/*",
    "https://www.amazon.com/*",
    "https://intl.target.com/*",
    "https://www.target.com/*"
  ],
  "content_security_policy": "default-src 'self'; script-src 'script-src-elem' https://api.bestbuy.com; style-src * 'unsafe-inline'; connect-src https://api.bestbuy.com; img-src * data:;"
}
