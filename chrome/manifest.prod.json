{
  "version": "0.0.0",
  "name": "best-buy-product-locator",
  "manifest_version": 2,
  "description": "Example for react-chrome-extension-boilerplate",
  "browser_action": {
    "default_title": "Best Buy Product Locator",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "img/icon-16.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "web_accessible_resources": ["inject.html"],
  "background": {
    "page": "background.html"
  },
  "permissions": ["webRequest", "contextMenus", "tabs", "storage", "https://api.bestbuy.com/*"],
  "content_security_policy": "default-src 'self'; script-src 'self' https://api.bestbuy.com; style-src * 'unsafe-inline'; connect-src https://api.bestbuy.com; img-src 'self' data:;"
}
